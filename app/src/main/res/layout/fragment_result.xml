<!-- res/layout/fragment_result.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"

    android:layout_gravity="center|center_horizontal|center_vertical">

    <RelativeLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Result Screen -->
        <LinearLayout
            android:id="@+id/resultScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="false"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Add your UI elements for displaying the result here -->
            <TextView
                android:layout_width="334dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Top Fields for you\n(Select 3 if there are more than 3 Fields)"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Assuming you have a ChipGroup with the id "resultChipGroup" -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/resultChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/recommend"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:backgroundTint="#FFFFFF"
                android:text="Proceed"
                android:textColor="#000000"
                android:textColorHighlight="#DC0000"
                android:textColorHint="#00FFFFFF" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
