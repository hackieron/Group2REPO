<!-- res/layout/item_question_with_hexagon.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|center_horizontal|center_vertical">

    <!-- Hexagon background for the question text -->
    <RelativeLayout
        android:id="@+id/hexagonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"

        android:padding="8dp">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/img_2"
            android:gravity="center"
            android:padding="50dp"
            android:text="aisfbabwfuiwbauifbasifbiob wefhb iwuefb wpioefuvbqw"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemnumber"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/questionText"
            android:layout_alignEnd="@+id/questionText"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:text="Kieron\" />

    </RelativeLayout>

    <!-- Buttons outside the hexagon -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_below="@id/hexagonContainer"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/yesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"

            android:textColor="#000000" />

        <Button
            android:id="@+id/noButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>
