<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="20dp"
        android:scrollbarSize="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/closeButton1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                app:backgroundTint="#F3C64A"
                app:srcCompat="@drawable/baseline_close_24"
                app:useCompatPadding="false" />

            <TextView
                android:id="@+id/fullDescriptionTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/dm_sans"
                android:foregroundGravity="right"
                android:gravity="right"
                android:text="Bachelor of Science in Computer Engineering"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fullDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/dm_sans"
                android:text="auosghfquioashd ioahd dhawd ahw awhdio ad aiowdh aihdio abd iqwyhd Dhjfh weofwefh weohf sdhfsdf d"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shortDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/dm_sans"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="asdasdw aw dasgd wg uiawgduia wgda igwiags uigsai guaisudg aisg duiasgd uiasgd iuasg iagsdgh qaosugdo asg duioagsd uiagsog asoig asgd auiosgd ioaghsio agd iaslidug alsiud agsdluasd" />

            <TextView
                android:id="@+id/longDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/dm_sans"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="asd asd as a \nasd asd as da as das\n asda dasdasda asd asd\n" />

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:autoLink="web"
                android:fontFamily="@font/dm_sans"
                android:linksClickable="true"
                android:textColorLink="@color/gold"
                android:textSize="18sp"
                tools:text="m.google.com" />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/noto_sans"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
