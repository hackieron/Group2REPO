<!-- res/drawable/glass_morphism_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with solid color (adjust alpha for transparency) -->
    <item>
        <shape>
            <solid android:color="#7A000000" /> <!-- Set the background color with transparency -->
            <corners android:radius="8dp" /> <!-- Set the corner radius here if needed -->
        </shape>
    </item>

    <!-- Border stroke -->
    <item android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape>
            <solid android:color="#60A6A255" />
            <stroke
                android:width="0.4dp"
                android:color="#FFFFFF" /> <!-- Set the border color here -->
            <corners android:radius="8dp" /> <!-- Set the corner radius here if needed -->
        </shape>
    </item>

</layer-list>
